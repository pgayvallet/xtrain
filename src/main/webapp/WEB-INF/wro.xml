<?xml version="1.0" encoding="UTF-8"?>
<groups xmlns="http://www.isdc.ro/wro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.isdc.ro/wro wro.xsd">

    <!-- libs -->
    <group name="libs">
        <js>/js/libs/json2.js</js>
        <js>/js/libs/moment.js</js>
        <js>/js/libs/jquery/jquery.js</js>
        <js>/js/libs/jquery/plugins/*.js</js>
        <js>/js/libs/underscore.js</js>
        <js>/js/libs/backbone.js</js>
    </group>

    <group name="base-css">
        <css>/css/reset.css</css>
        <css>/css/variables.less</css>
        <css>/css/main.less</css>
    </group>

    <group name="bootstrap">
        <css>/js/libs/bootstrap/bootstrap.css</css>
        <js>/js/libs/bootstrap/bootstrap.js</js>
    </group>

    <!-- BO -->

    <group name="bo">
        <group-ref>base-css</group-ref>
        <css>/css/admin/*.less</css>
    </group>

    <!-- FO -->

    <group name="front-scripts">
        <js>/js/fwk.js</js>
        <js>/js/vimeo.js</js>
        <js>/js/nav.js</js>
        <js>/js/left-nav.js</js>
        <js>/js/main.js</js>
    </group>

    <group name="front">
        <group-ref>base-css</group-ref>
        <group-ref>front-scripts</group-ref>
        <css>/css/front/*.less</css>
    </group>


</groups>